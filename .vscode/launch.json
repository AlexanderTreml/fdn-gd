    "version": "0.2.0",
    "configurations": [
        {
			"name": "Run Demo [EDITOR] - [DEBUG MODE]",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "PATH TO GODOT",
			"args": [
				"--editor",
				"--path",
				"${workspaceFolder}/demo",
				"--verbose",
				"--debug",
				"--stdout"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "internalConsole",
		},
